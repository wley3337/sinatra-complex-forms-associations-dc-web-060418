<h1>Create a new Pet</h1>
<form action="/pets" method="post">
  <label>Name:</label>

  <br>
<input type="text" name="pet[name]" id="pet_name" >


<br>
<p> Choose an owner:</p>
<%@owners.each do |owner|%>
  <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>">
  <%= owner.name%></input><br>
  <%end%>
  <br>
    <label> and/or, create a new owner:</label>
    <br>
    <label>Owner name:</label>
    <input type="text" name="owner[name]" id="owner_name"></input>

    <br>
    <br>
      <input type="submit" name="submit" value="Create Pet">

    </form>
